<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table>
  <thead>
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th>Cpf</th>
    <th>Rg</th>
    <th>Endereco</th>
    <th>Data nascimento</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @clientes.each do |cliente| %>
    <tr>
      <td><%= cliente.nome %></td>
      <td><%= cliente.email %></td>
      <td><%= cliente.cpf %></td>
      <td><%= cliente.rg %></td>
      <td><%= cliente.endereco %></td>
      <td><%= imprimi_data(cliente.data_nascimento) %></td>
      <% if cliente.id == session[:usuario_id] %>
        <td><%= link_to 'Abrir conta ' + cliente.nome, new_conta_path(cliente_id: cliente.id) %></td>
        <td><%= link_to 'Exibir', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Excluir', cliente, method: :delete, data: {confirm: 'VocÃª tem certeza?'} %></td>
      <% else %>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

